nav#player.navbar.navbar-fixed-bottom
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#secondary-nav')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        span.glyphicon.glyphicon-play

    .collapse.navbar-collapse#secondary-nav
      ul.nav.navbar-nav
        if nowPlaying
          li.nowPlaying
            - var showRef = '/shows/' + nowPlaying.show.id
            a(href=showRef)
              span= nowPlaying.show.title
          if nowPlaying.hosts
            each h in nowPlaying.hosts
              - var userRef = '/staff/' + h.id
              a(href=userRef)
                p #{h.first_name} #{h.last_name}
                
          if nowPlaying.next
            li Next up: 
              - var nextHref = '/shows/' + nowPlaying.next[0].show.id
              a(href=nextHref)
                span= nowPlaying.next[0].show.title


          
