nav#footer.navbar.navbar-fixed-bottom
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#secondary-nav')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        span.glyphicon.glyphicon-play

    .collapse.navbar-collapse#secondary-nav
      ul.nav.navbar-nav
        li.nowPlaying
          h6 Now Playing:
          if nowPlaying
            - var showRef = '/shows/' + nowPlaying.show.id
            a(href=showRef)
              span=nowPlaying.show.title
          else
            span Automator
        li.currentShowTime
          if nowPlaying
            span.timeslot.timeSince= nowPlaying.timeslot
          else
            span -- : --
          span +
          
        li.nextUpTime
          span -
          if next
            span.timeslot.timeUntil= next[0].timeslot
          else 
            span -- : --
        li.nextUp
          h6 Next Up:
          if next
            - var nextHref = '/shows/' + next[0].show.id
            a(href=nextHref)
              span= next[0].show.title
          else
            span Automator

            
            
          
      
      
