extends ../_layout
block content
  .container-fluid
    #show.col-xs-12.col-sm-8.col-sm-offset-2
      .row
        .col-xs-12.col-sm-6.col-sm-offset-3
           - var showHref = '/shows/' + show.id
           a(href=showHref)
            h1= show.title
      .row
        .col-xs-12.col-sm-6.col-sm-offset-3
          h4 First aired 
            span.dateFromNow= show.created
      .row
        .col-xs-12.col-sm-6.col-sm-offset-3
          p= show.blurb
      if hosts
        .row
          .col-xs-12.col-sm-8.col-sm-offset-2
            p with 
              each host, index in hosts
                - var userHref = '/staff/' + host.id
                if index === hosts.length - 1
                  span and 
                a(href=userHref)
                  span #{host.first_name} #{host.last_name}
                  if index !== hosts.length - 1 
                    if hosts.length == 2
                      span  
                    else
                      span , 
      if playlists
        #related.col-xs-12.col-sm-8.col-sm-offset-2
          .row
            h4 Recent Playlists
              each pl in playlists
                - var plHref = '/archive/playlists/' + pl.id
                a(href=plHref)
                  .playlist
                    h5 ##{pl.id}
                    p.dateFromNow= pl.created

          
